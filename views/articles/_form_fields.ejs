<div class="form-group">
    <label for="title" class="mb-2">Title</label>
    <input type="text" name="title" id="title" value="<%= article.title %>" class="form-control mb-4" required>
</div>
<div class="form-group">
    <label for="description" class="mb-2">Description</label>
    <textarea name="description" id="description" class="form-control mb-4"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown" class="mb-2">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control mb-4" required><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-secondary">Cancel</a>     <!--to cancel this new post and revert back to home page-->